<!DOCTYPE HTML>
<html>

<head>
    <title>StatsBH.win - COMING SOON!</title>
    <link rel="shortcut icon" href="/assets/img/favicon.ico" type="image/x-icon">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" href="/assets/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet/less" type="text/css" href="/assets/css/style.less">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/less.js/3.0.0/less.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="assets/css/jquery.fullPage.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="assets/js/jquery.easings.min.js"></script>
    <script src="assets/js/scrolloverflow.min.js"></script>
    <script src="assets/js/jquery.fullPage.js"></script>
</head>

<body>
    <div class="header">
        <div class="search">
            <i class="fas fa-search to" id="search"></i>
            <input type="text" id="player-search" placeholder="Search for a player!" />
        </div>
    </div>
    <div id="fullpage">
        <div class="section">
            <div class="tiles">
                <p>Search.</p>
                <p>Compete.</p>
            </div>
            <div class="arrow bounce" id="next-section"></div>
        </div>
        <div class="section section-stream fp-auto-height-responsive">
            <h1>Top Streams</h1>
            <div class="streams">
                <% top_streams.forEach(stream => { %>
                    <div class="stream">
                        <a href="<%= stream.stream_url %>" target="_blank"><img src="<%= stream.stream_preview_url %>" id="im"></img></a>
                        <div class="info">
                            <span><%= stream.stream_viewers %> viewers</span>
                        </div>
                        <div class="name">
                            <span><%= stream.stream_name %></span>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <script type="text/javascript">
            $(document).ready(function() {
                $('#fullpage').fullpage({
                    anchors: ['main', 'streams'],
                    responsiveWidth: 400
                });
            });
        </script>
        <script type="text/javascript" src="assets/js/main.js"></script>
</body>

</html>
